<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.openclassrooms.realestatemanager.ui.AddEditEstateActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_estate_title"
        android:hint="@string/add_edit_estate_title"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_estate_country"
        android:hint="@string/add_edit_estate_country"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_edit_estate_city"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_title" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_estate_city"
        android:hint="@string/add_edit_estate_city"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@id/add_edit_estate_country"
        app:layout_constraintEnd_toStartOf="@id/add_edit_estate_zip"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_title" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_estate_zip"
        android:hint="@string/add_edit_estate_zip"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@id/add_edit_estate_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_title" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_estate_address"
        android:hint="@string/add_edit_estate_address"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_edit_estate_find"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_country" />

    <ImageButton
        android:id="@+id/add_edit_estate_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_find"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_zip"
        app:layout_constraintBottom_toTopOf="@id/add_edit_estate_currency"
        app:layout_constraintStart_toEndOf="@id/add_edit_estate_address"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_estate_surface"
        android:hint="@string/add_edit_estate_surface"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_edit_estate_price"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_address" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_estate_price"
        android:hint="@string/add_edit_estate_price"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/add_edit_estate_surface"
        app:layout_constraintEnd_toStartOf="@id/add_edit_estate_currency"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_address" />

    <Button
        android:id="@+id/add_edit_estate_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_edit_estate_currency"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_address"
        app:layout_constraintBottom_toTopOf="@id/add_edit_estate_add_image_card_view"
        app:layout_constraintStart_toEndOf="@id/add_edit_estate_price"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_edit_estate_add_image_card_view"
        android:layout_width="112dp"
        android:layout_height="112dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_price"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/add_edit_estate_add_image_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add_image"/>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_edit_estate_list_images"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_price"
        app:layout_constraintStart_toEndOf="@id/add_edit_estate_add_image_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_list_images_with_description"/>

    <CheckBox
        android:id="@+id/add_edit_estate_check_parc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_edit_estate_parc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_edit_estate_check_school"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_add_image_card_view"/>

    <CheckBox
        android:id="@+id/add_edit_estate_check_school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_edit_estate_school"
        app:layout_constraintStart_toEndOf="@id/add_edit_estate_check_parc"
        app:layout_constraintEnd_toStartOf="@id/add_edit_estate_check_shop"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_add_image_card_view"/>

    <CheckBox
        android:id="@+id/add_edit_estate_check_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/add_edit_estate_shop"
        app:layout_constraintStart_toEndOf="@id/add_edit_estate_check_school"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_add_image_card_view"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_estate_agent"
        android:hint="@string/add_edit_estate_agent"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_check_parc" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/add_edit_estate_agent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/add_edit_estate_lite_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:liteMode="true"/>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_edit_estate_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_save"
        app:borderWidth="0dp"
        android:contentDescription="@string/add_edit_estate_save_description_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
